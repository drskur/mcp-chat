{
  "name": "@pace-mcp-client/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/backend/src",
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  },
  "tags": [],
  "targets": {
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "build": {
      "dependsOn": ["lint", "compile", "test", "bundle"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/backend"
      }
    },
    "bundle": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/backend/bundle"],
      "options": {
        "commands": [
          "uv export --frozen --no-dev --no-editable --project backend -o dist/packages/backend/bundle/requirements.txt",
          "uv pip install -n --no-installer-metadata --no-compile-bytecode --python-platform x86_64-manylinux2014 --target dist/packages/backend/bundle -r dist/packages/backend/bundle/requirements.txt"
        ],
        "parallel": false
      },
      "dependsOn": ["compile"]
    },
    "compile": {
      "executor": "@nxlv/python:build",
      "outputs": ["{workspaceRoot}/dist/packages/backend/build"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/backend/build",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["src", "tests"]
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["src", "tests"]
      },
      "cache": true
    },
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "serve": {
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "uv run main.py",
        "cwd": "packages/backend"
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    }
  },
  "metadata": {
    "apiName": "backend",
    "apiType": "fast-api"
  }
}
